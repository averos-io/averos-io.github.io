{% assign navigation = site.data.navigation[include.nav] %}

<nav class="nav__list">
  {% if page.sidebar.title %}<h3 class="nav__title" style="padding-left: 0;">{{ page.sidebar.title }}</h3>{% endif %}
  <input id="ac-toc" name="accordion-toc" type="checkbox" />
  <label for="ac-toc">{{ site.data.ui-text[site.locale].menu_label | default: "Toggle Menu" }}</label>
  <ul class="nav__items">
    {% for nav in navigation %}
      <li>
        {% if nav.url %}
          <a href="{{ nav.url | flatify | relative_url }}"><span class="nav__sub-title">{{ nav.title }}</span></a>
        {% else %}
          <span class="nav__sub-title">{{ nav.title }}</span>
        {% endif %}

        {% if nav.children != null %}
        <ul>
          {% for child in nav.children %}
              {% if child.url %}
                <li><a href="{{ child.url | flatify | relative_url }}"{% if child.url == page.url %} class="active"{% endif %}>{{ child.title }}</a></li>
              {% else %}
                <span class="nav__sub-title">{{ child.title }}</span>
              {% endif %}

              {% if child.children != null %}
                <ul>
                  {% for c in child.children %}
                      {% if c.url %}
                        <li><a href="{{ c.url | flatify | relative_url }}"{% if c.url == page.url %} class="active"{% endif %}>{{ c.title }} {{c.section}}</a></li>
                      {% else %}
                        <span class="nav__sub-title">{{ c.title }}</span>
                      {% endif %}
                  {% endfor %}
                </ul>
              {% endif %}
          {% endfor %}
        </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
